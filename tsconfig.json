{
    "compilerOptions": {
        "outDir": "./build",
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "jsxFactory": "h",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/index.tsx"
    ],
    "exclude": [
        "/node_modules/**/*.tsx",
        "/node_modules/**/*.ts"
    ]
}